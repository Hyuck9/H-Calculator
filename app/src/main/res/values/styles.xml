<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="MyDigitButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="fButtonColor">@color/md_grey_200</item>
        <item name="shadowColor">@color/md_grey_400</item>
        <item name="cornerRadius">24dp</item>
        <item name="shadowEnabled">true</item>
        <item name="shadowHeight">4dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:onClick">onButtonClick</item>
    </style>

    <style name="MyMemoryButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="fButtonColor">@color/md_grey_600_dark</item>
        <item name="shadowColor">@color/md_grey_700_dark</item>
        <item name="cornerRadius">8dp</item>
        <item name="shadowEnabled">true</item>
        <item name="shadowHeight">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:onClick">onMemoryButtonClick</item>
    </style>

    <style name="DisplayEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="DisplayEditTextStyle.Formula">
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:paddingStart">16dip</item>
        <item name="android:paddingEnd">16dip</item>
        <item name="minTextSize">36sp</item>
        <item name="maxTextSize">64sp</item>
        <item name="stepTextSize">8sp</item>
    </style>

    <style name="DisplayEditTextStyle.Result">
        <item name="android:layout_marginBottom">32dip</item>
        <item name="android:paddingStart">16dip</item>
        <item name="android:paddingEnd">16dip</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/md_blue_grey_600</item>
    </style>

</resources>